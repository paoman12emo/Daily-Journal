<%- include("partials/header"); -%>

<h1><%= homeHeader %></h1>

<p><%= homePageContent%></p>


<% newPost.forEach(function(post){ %>
<h1><%=post.title.substring(0,15)%></h1>
<form action="/delete" method="post">
  <p><%=post.content.substring(0,100) + " ..."%> <a href="/post/<%= post._id %>">Read More</a>
    <button class="delete-button" type="submit" name="delete" value="<%= post._id %>">🗑️</button></p>
</form>


<% }); %>
<%- include("partials/footer"); -%>
